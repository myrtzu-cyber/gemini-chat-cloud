# Environment Configuration for Cloud Deployment
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Server Configuration
PORT=3000
NODE_ENV=production

# Google Drive Backup Configuration
# Service Account credentials (recommended for production)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Google Drive Folder Configuration
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Email para compartilhar backups do Google Drive
USER_EMAIL_FOR_SHARING=seu-email@gmail.com

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.railway.app

# Security
JWT_SECRET=your_jwt_secret_for_future_auth
